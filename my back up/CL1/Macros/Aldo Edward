// This macro file will be loaded for the player it is named after. 

include "Default"

F2
{
if @my.right_item != "Bloodblade"
	"/equip bloodblade\r"
end if
    "/use /disable\r"
}

F1
{
if @my.right_item != "Bloodblade"
	"/equip bloodblade\r"
end if
    "/use /absorb\r"
		pause 3
            "/use /absorb /report\r"
}

F3
{
"/useitem bloodstonering /dead \r"
}

F4
{
    "/use /disable\r"
	"/use /hamstring\r"
	"/use /cripple\r"
}

F5
{
"/whisper catnap \r"

}
// This macro file will be loaded for the player it is named after. 

include "Default"

SETGLOBAL rockon 0

F1
{
if rockon == 0
	SETGLOBAL rockon 1
		if @my.waist_item != Stonegirdle
			"/equip Stonegirdle \r"
		end if
			message "* Lets ROCK!"
				"/useitem waist \r"
					goto rocktime
else 
	if rockon == 1
		SETGLOBAL rockon 0
			"/unequip waist \r"
	end if
end if
label rocktime
if rockon == 1
	pause 900
		"/money \r"
			pause 517
				if rockon == 1
					message "* rock n' rolling again"
						"/pose stand \r"
							"/useitem waist \r"
								goto rocktime
	end if
end if
}
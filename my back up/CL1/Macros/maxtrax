// This macro file will be loaded for the player it is named after. 

include "Default"

F1
{
$any_click
if @my.right_item == "chain"
    goto end
else
if @my.right_item == "Fell Blade"
        "/use /charge \r"
else
if @my.right_item == "Tell Blade"
        "/use /charge \r"
else
if @my.right_item == "Labrys"
        "/use /charge \r"
else
"/equip fellblade\r"
    "/use /charge \r"
            end if
        end if
    end if
end if
label end
}
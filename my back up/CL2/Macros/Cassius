// This macro file will be loaded for the player it is named after. 

include "Default"
F1
{
message "* " @my.right_item " "
}

F3
{
if @my.right_item == "Greataxe"
    "/equip shinydagger\r"
else
if @my.right_item == "Shiny Dagger <#1>"
    "/equip gossamer\r"
else
if @my.right_item == "Gossamer"
    "/equip dagger\r"
else
if @my.right_item == "Dagger"
    "/equip Longsword\r"
else
if @my.right_item == "longsword"
	"/equip greataxe\r"
                end if
            end if
        end if
    end if
end if
}
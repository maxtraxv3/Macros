SETGLOBAL Hchk 1
SETGLOBAL Right_H ""
SETGLOBAL Rad 1

@login
{
call sethealeritem
}

"/hi" // incase you where not holding your main healing item when you loged in.
{
call sethealeritem
}

sethealeritem
{
setglobal Right_H @my.right_item
message "* Healer Item set to" Right_H ""
if Right_H >= asklepian
	SETGLOBAL Rad 1
end if
}


click2
{
$any_click
set click2ck @clicksplayer
if CHAINING == 1
	message "* Chaining Mode Lock" 
		goto end
else
	if click2ck != ""
		if @my.right_item != Right_H
			"/equip " Right_H "\r" 
	end if
		"/use " click2ck " \r"
			message "* Healing" click2ck ""
	else 
		"/use /off \r"
	end if
	if click2ck == @my.simple_name
		"/equip moonstone\r"
	end if
label end
	end if
end if
}

F1
{
if CHAINING == 1
	message "* Chaining Mode Lock" 
		goto end
else
	if Rad == 1
		if @my.right_item != Right_H
			"/equip " Right_H "\r"
		end if
	"/use \r"
		message "*Radium Mode"
	else
		message "* your Healer Item isnt capble of that"
	end if
label end
end if
}

F3
{
if CHAINING == 1
	goto end
else
if @my.right_item != Right_H
"/equip " Right_H "\r"
end if
"/use /pet \r"
label end
end if
}

F4
{

"/whisper Attack\r" // these are the defaults if you change them you will have to modify these commands
}

F5
{
"/whisper Stay\r" // these are the defaults if you change them you will have to modify these commands
}

F6
{
"/whisper Obey\r" // these are the defaults if you change them you will have to modify these commands
}

F9
{
"/whisper Go home\r" // these are the defaults if you change them you will have to modify these commands
}

F10 //ESCAPE!
{
if @my.neck_item != "Purgatory Pendant"
	"/equip purgatorypendant\r"
end if
	"/useitem purgatorypendant\r"
}

setglobal khnam ""
setglobal numHn0 ""
setglobal numHn1 ""
setglobal numHn2 ""
setglobal numHn3 ""
setglobal numHn4 ""
setglobal numHn5 ""
setglobal numHn6 ""
setglobal numHn7 ""
setglobal numHn8 ""
setglobal numHn9 ""
setglobal nameselector 0
setglobal numbheals 0
 
"/numheal"
{
if numbheals == 0
	setglobal numbheals 1
		message "* numbpad heals ON!"
end if
call reload
label top
if numbheals == 1
set logck @env.textLog
if logck >= "setting Numpad"
	goto top
end if
if logck >= "is sharing experiences"
	pause 1
		set namnar @env.textLog.word[2]
			if namnar != @my.name
				if khnam == ""
					set khnam namnar
					message "" khnam ""
						call loadh
				end if
			end if
end if
if logck >= "Currently sharing"
	if @env.textLog.word[8] != ""
		setglobal numHn0 @env.textLog.word[8]
			message "setting Numpad 0 to" numHn0 ""
				setglobal nameselector 1
					pause 1
	end if
	if @env.textLog.word[9] != ""
		setglobal numHn0 @env.textLog.word[9]
			message "setting Numpad 1 to" numHn1 ""
				setglobal nameselector 2
					pause 1
	end if
	if @env.textLog.word[10] != ""
		setglobal numHn0 @env.textLog.word[10]
			message "setting Numpad 2 to" numHn2 ""
				setglobal nameselector 3
					pause 1
	end if
	if @env.textLog.word[11] != ""
		setglobal numHn0 @env.textLog.word[11]
			message "setting Numpad 3 to" numHn3 ""
				setglobal nameselector 4
					pause 1
	end if
	if @env.textLog.word[12] != ""
		setglobal numHn0 @env.textLog.word[12]
			message "setting Numpad 4 to" numHn4 ""
				setglobal nameselector 5
					pause 1
	end if
	if @env.textLog.word[13] != ""
		setglobal numHn0 @env.textLog.word[13]
			message "setting Numpad 5 to" numHn5 ""
				setglobal nameselector 6
					pause 1
	end if
	if @env.textLog.word[14] != ""
		setglobal numHn0 @env.textLog.word[14]
			message "setting Numpad 6 to" numHn6 ""
				setglobal nameselector 7
					pause 1
	end if
	if @env.textLog.word[15] != ""
		setglobal numHn0 @env.textLog.word[15]
			message "setting Numpad 7 to" numHn7 ""
				setglobal nameselector 8
					pause 1
	end if
	if @env.textLog.word[16] != ""
		setglobal numHn0 @env.textLog.word[16]
			message "setting Numpad 8 to" numHn8 ""
				setglobal nameselector 9
					pause 1
	end if
	if @env.textLog.word[17] != ""
		setglobal numHn0 @env.textLog.word[17]
			message "setting Numpad 9 to" numHn9 ""
				setglobal nameselector 0
					pause 1
		end if
	end if
end if
goto top
}

"/numhealoff"
{
if numbheals == 1
	setglobal numbheals 0
		message "* numbpad heals OFF!"
			call clearnames
end if
}

loadh
{
if khnam != ""
	if nameselector == 0
		if numHn0 == ""
			if khnam != numHn0
				setglobal numHn0 khnam
					setglobal khnam ""
						set nameselector + 1
						message "" numHn0 "2"
			end if
		end if
	end if
	if nameselector == 1
		if numHn1 == ""
			if khnam != numHn1
				setglobal numHn1 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 2
		if numHn2 == ""
			if khnam != numHn2
				setglobal numHn2 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 3
		else if numHn3 == ""
			if khnam != numHn3
				setglobal numHn3 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 4
		if numHn4 == ""
			if khnam != numHn4
				setglobal numHn4 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 5
		else if numHn5 == ""
			if khnam != numHn5
				setglobal numHn5 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 6
		if numHn6 == ""
			if khnam != numHn6
				setglobal numHn6 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 7
		if numHn7 == ""
			if khnam != numHn7
				setglobal numHn7 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 8
		if numHn8 == ""
			if khnam != numHn8
				setglobal numHn8 khnam
					setglobal khnam ""
						set nameselector + 1
			end if
		end if
	end if
	if nameselector == 9
		if numHn9 == ""
			if khnam != numHn9
				setglobal numHn9 khnam
					setglobal khnam ""
						set nameselector 0
			end if
		end if
	end if
end if
}
 
reload
{
set logck @env.textLog
"/share \r"
if logck >= "No one is sharing"
	message "*** no shares ***"
		goto end
end if
label end
}

clearnames
{
setglobal numHn0 ""
setglobal numHn1 ""
setglobal numHn2 ""
setglobal numHn3 ""
setglobal numHn4 ""
setglobal numHn5 ""
setglobal numHn6 ""
setglobal numHn7 ""
setglobal numHn8 ""
setglobal numHn9 ""
}


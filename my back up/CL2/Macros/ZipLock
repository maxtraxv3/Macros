// This macro file will be loaded for the player it is named after. 

include "Default"

SETGLOBAL rockon 0

F1
{
if rockon == 0
	SETGLOBAL rockon 1
		if @my.waist_item != Stonegirdle
			"/equip Stonegirdle \r"
		end if
			message "* Lets ROCK!"
				"/useitem waist \r"
					goto rocktime
else 
	if rockon == 1
		SETGLOBAL rockon 0
			"/unequip waist \r"
				goto end
	end if
end if
label rocktime
	pause 900
		"/money \r"
			pause 518 //<<--- ajust this number ---
				message "* rock n' rolling again"
					"/pose stand \r"
						"/useitem waist \r"
							goto rocktime
end if
label end
}
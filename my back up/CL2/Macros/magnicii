// This macro file will be loaded for the player it is named after. 

include "Default"

SETGLOBAL Stoned 0
SETGLOBAL Pould 0
//SETGLOBAL swaoback 0


F6
{
message "* Swapping Armour"
if @my.torso_item >= "breastplate"
"/equip shirt2 \r"
else
"/equip gildedbreastplate \r"
end if
pause 1
if @my.Head_item >= "helmet"
"/unequip ironhelm \r"
else
"/equip ironhelm \r"
end if
pause 1
if @my.left_item >= "shield"
"/unequip ironshield \r"
else
"/equip ironshield \r"
end if
}

F1
{
message "* Swapping Boots"
if @my.feet_item >= "boots"
"/equip pairofshoes1 \r"
else
"/equip leadboots \r"
end if
}

F3
{
if @my.waist_item != "Stonegirdle"
	"/equip Stonegirdle \r"
end if
	if Stoned == 0
		"/useitem Stonegirdle \r"
			setglobal swaoback @my.right_item
				"/unequip right \r"
					SETGLOBAL Stoned 1
	else if Stoned == 1
		"/useitem Stonegirdle \r"
			"/equip " swaoback " \r"
				"/equip fifthcirclefighterbelt \r"
					SETGLOBAL Stoned 0
end if
}

F2
{
if Pould == 0
	"/equip Atkite Pauldron\r"
		"/useitem atkitepauldron \r"
			SETGLOBAL Pould 1
else if Pould == 1
	"/unequip Atkite Pauldron\r"
		SETGLOBAL Pould 0
end if
}

shift-right-click 
{
$any_click
if @my.right_item == "chain"
    goto end
else
if @my.right_item == "Fell Blade"
        "/use /charge \r"
else
if @my.right_item == "Tell Blade"
        "/use /charge \r"
else
if @my.right_item == "Labrys"
        "/use /charge \r"
else
"/equip fellblade\r"
    "/use /charge \r"
            end if
        end if
    end if
end if
label end
}
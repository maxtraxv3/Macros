// simply open Character file in macros folder, with any text editor and add this line on top " include "Ranger.txt" " and copy and paste this file into the macro folder. 
// F1 = First morph (toggle-able)
// F2 = second morph (toggle-able)
// F3 = HeartWood Charm (toggle-able)
// F4 = Shield Stone (toggle-able)
// F5 = Befriend
// F6 = Control Befriend'ed
// F7 = Dismiss Friend
// /reflect = Use's Belt to reflect what you have learned
// /Judge <insert name> = allows you to judge how close other are to becoming a Ranger


// speed ending / unmoprh /freind death double checks toggles buttons
// make sure when you press the button the action you expect always works
@login
{
message "Type /ranger for commands if you forget"
label chek
set checkD @env.textLog
	if checkD >= "You return"
	SETGLOBAL morph1 0
	pause 1
	SETGLOBAL morph2 0
end if
	if checkD >= "Using /SHARE to create a spirit link"
	SETGLOBAL morph1 0
	pause 1
	SETGLOBAL morph2 0
    pause 1
	SETGLOBAL speeding 0
end if
	if checkD >= "You are already in"
	SETGLOBAL morph1 0
	pause 1
	SETGLOBAL morph2 0
end if
	if checkD >= "cannot possibly use"
	SETGLOBAL morph1 0
	pause 1
	SETGLOBAL morph2 0
    pause 1
	SETGLOBAL speeding 0
end if
	if checkD >= hasfallen
	SETGLOBAL morph1 0
    pause 1
	SETGLOBAL morph2 0
    pause 1
	SETGLOBAL speeding 0
end if
	if checkD >= "You slow down"
	SETGLOBAL speeding 0
end if
goto chek
}

SETGLOBAL hasfallen @my.name
SETGLOBAL hasfallen + " has fallen to a"
SETGLOBAL speeding 0
SETGLOBAL morph1 0
SETGLOBAL morph2 0

"/ranger"
{
message "F1 = First morph (toggle-able)"
pause 1
message "F2 = second morph (toggle-able)"
pause 1
message "F3 = HeartWood Charm (toggle-able)"
pause 1
message "F4 = Shield Stone (toggle-able)"
pause 1
message "F5 = Befriend"
pause 1
message "F6 = Control Befriend'ed"
pause 1
message "F7 = Dismiss Friend"
pause 1
message "/reflect = Use's Belt to reflect what you have learned"
pause 1
message "/Judge <insert name> = allows you to judge how close other are to becoming a Ranger"
}

F1
{
if morph1 == 0
	SETGLOBAL morph1 1
		if @my.waist_item != "belt of the wild"
			"/equip beltofthewild\r"
		end if
"/useitem beltofthewild /shape Giant Carnivorous Plankton \r" // change "Giant Carnivorous Plankton" to any "You have learned to assume the shape of the following creatures" creatures
else if morph1 == 1
	"/useitem beltofthewild /return\r"
		SETGLOBAL morph1 0
end if
}

F2
{
if morph2 == 0
	SETGLOBAL morph2 1
	if @my.waist_item != "belt of the wild"
		"/equip beltofthewild\r"
	end if
"/useitem beltofthewild /shape Young Sasquatch \r" // change "Haremau Kitten" to any "You have learned to assume the shape of the following creatures" creatures
else if morph2 == 1
	"/useitem beltofthewild /return\r"
		SETGLOBAL morph2 0
end if
}

F3
{
if speeding == 0
	SETGLOBAL speeding 1
		if @my.left_item != "Heartwood Charm"
			"/equip heartwood\r"
			end if
		"/useitem left\r"
else if speeding == 1
		if @my.left_item == "Heartwood Charm"
			"/unequip heartwood\r"
			end if
		SETGLOBAL speeding 0
end if
}

F4
{
	if @my.finger_item == "Shieldstone" //skips equip phase if true
	     goto ON
	end if

	label equip
	"/equip shieldstone\r"

	label ON
	"/useitem shieldstone\r"
	pause 1

	label CHECK //Checks for Shieldstone failures …
	if @env.textLog >= "Your Shieldstone goes inert"
	     pause 1
	     goto equip //…if so equips backup (if you have 1)
	end if
}

F5
{
if @my.waist_item != "Belt of the Wild"
	"/equip beltofthewild\r"
end if
"/useitem belt /befriend\r"
}

F6
{
if @my.waist_item != "Belt of the Wild"
	"/equip beltofthewild\r"
	end if
"/useitem belt /control\r"
}

"/reflect"
{
	message ""
	if @my.waist_item != "belt of the wild"
		"/equip beltofthewild\r"
	end if
	"/useitem beltofthewild /reflect\r"
}

f7 
{
if @my.waist_item != "Belt of the Wild"
	"/equip beltofthewild\r"
end if
"/useitem belt /dismiss\r"
}

"/judge"
//Adapted from a macro by Super Chicken
{
	if @my.waist_item != "belt of the wild"
		"/equip beltofthewild\r"
	end if
	"/select  " + @text.word[0] + "\r"
	set theJudged @selplayer.simple_name
	"/select\r"
	"/useitem beltofthewild /judge " theJudged "\r"

	if @env.textLog < "has barely begun to learn about the earth."
	"/ponder " theJudged " has barely begun to learn about the earth."
	message "* 8 more messages to go."
	end if

	if @env.textLog < "has begun to learn about the earth."
	"/ponder " theJudged " has begun to learn about the earth."
	message "* 7 more messages to go."
	end if

	if @env.textLog < "still has much to learn about the earth."
	"/ponder " theJudged " still has much to learn about the earth."
	message "* 6 more messages to go."
	end if 

	if @env.textLog < "is making progress towards becoming a Ranger."
	"/ponder " theJudged " is making progress towards becoming a Ranger."
	message "* 5 more messages to go."
	end if 

	if @env.textLog < "is making good progress towards becoming a Ranger."
	"/ponder " theJudged " is making good progress towards becoming a Ranger."
	message "* 4 more messages to go."
	end if

	if @env.textLog < "is making excellent progress towards becoming a Ranger."
	"/ponder " theJudged " is making excellent progress towards becoming a Ranger."
	message "* 3 more messages to go."
	end if

	if @env.textLog < "is knowledgeable about the earth."
	"/ponder " theJudged " is knowledgeable about the earth."
	message "* 2 more messages to go."
	end if

	if @env.textLog < "is very knowledgeable about the earth."
	"/ponder " theJudged " is very knowledgeable about the earth."
	message "* 1 more message to go."
	end if

	if @env.textLog < "is nearly ready to become a Ranger."
	"/ponder " theJudged " is nearly ready to become a Ranger."
	message "* Ready for Rangerhood."
	end if

	if @env.textLog < "has chosen another path and cannot become a Ranger."
	"/ponder " theJudged " has chosen another path and cannot become a Ranger."
	end if
}

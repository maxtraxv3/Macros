// simply open Character file in macros folder, with any text editor and add this line on top " include "Bloodmage.txt" " and copy and paste this file into the macro folder.
// F1 = Disable ablity
// F2 = Hemo ablity
// F3 = Inferno ablity
// F4 = Control ablity
// F5 = Absorb ablity
// F6 = Absorb Report (check what your Absorbing)
// F7 = Feign Dead
// /reflect Blade training messages (stops running when you click on screen)

@login
{
message "Type /bloodmage for commands if you forget"
}

"/bloodmage"
{
message "F1 = Disable ablity"
pause 1
message "F2 = Hemo ablity"
pause 1
message "F3 = Inferno ablity"
pause 1
message "F4 = Control ablity"
pause 1
message "F5 = Absorb ablity"
pause 1
message "F6 = Absorb Report (check what your Absorbing)"
pause 1
message "F7 = Feign Dead"
pause 1
message "/reflect Blade training messages"
}

F1
{
if @my.right_item != "Blood Blade"
	"/equip bloodblade\r"
end if
"/use /disable\r"

}

F2
{
if @my.right_item != "Blood Blade"
	"/equip bloodblade\r"
end if
"/use /hemo\r"
}

F3
{
if @my.right_item != "Blood Blade"
	"/equip bloodblade\r"
end if	
"/use /inferno\r"
}

SETGLOBAL control 0

F4
{
if @my.right_item != "Blood Blade"
	"/equip bloodblade\r"
end if
if control == 0
	SETGLOBAL control 1
		"/use /control\r"
else if control == 1
	SETGLOBAL control 0
		"/use /control\r"
end if
}

F5
{
if @my.right_item != "Blood Blade"
	"/equip bloodblade\r"
end if
"/use /absorb\r"
}

F6
{
if @my.right_item != "Blood Blade"
	"/equip bloodblade\r"
end if
"/use /absorb /report\r"
}

F7
{
if @my.finger_item != "Bloodstone Ring"
	"/equip bloodstonering\r"
end if
"/useitem bloodstonering /dead\r"
pause 80
"/unequip bloodstonering\r"
"/equip bloodstonering\r"
}

"/reflect"
{
"/use /reflect\r"
label top
set @env.click_interrupts true
pause 1
set Blademessage @env.textLog
if Blademessage < "You feel you have much to learn."
message "Blade message; 0-9"
end if
if Blademessage < "You feel tolerably skilled."
message "Blade message; 10-19"
end if
if Blademessage < "Your persistence is paying off."
message "Blade message; 20-29"
end if
if Blademessage < "You are progressing well."
message "Blade message; 30-39"
end if
if Blademessage < "You are becoming proficient."
message "Blade message; 40-49"
end if
if Blademessage < "You have learned much."
message "Blade message; 50-99"
end if
if Blademessage < "You have become skilled."
message "Blade message; 100-149"
end if
if Blademessage < "You have become very skilled."
message "Blade message; 150-199"
end if
if Blademessage < "Learning more is a challenge."
message "Blade message; 200-249"
end if
if Blademessage < "You have attained great skill."
message "Blade message; 250-299"
end if
if Blademessage < "You are becoming an expert."
message "Blade message; 300-349"
end if
if Blademessage < "You have attained tremendous skill."
message "Blade message; 350-399"
end if
if Blademessage < "You are close to attaining mastery."
message "Blade message; 400-449"
end if
if Blademessage < "You may be proud of your accomplishment."
message "Blade message; 450-499"
end if
if Blademessage < "You are becoming a master of your art."
message "Blade message; 500-549"
end if
if Blademessage < "Your dedication is commendable."
message "Blade message; 550-599"
end if
if Blademessage < "You show great devotion to your studies."
message "Blade message; 600-649"
end if
if Blademessage < "You are a credit to your craft."
message "Blade message; 650-699"
end if
if Blademessage < "Few indeed are your peers."
message "Blade message; 700-749"
end if
if Blademessage < "Your devotion to your craft is exemplary."
message "Blade message; 750-799"
end if
if Blademessage < "Your expertise is unquestionable."
message "Blade message; 800-899"
end if
if Blademessage < "You are truly a grand master."
message "Blade message; 900-999"
end if
if Blademessage < "Few if any are your equal."
message "Blade message; 1000-1249"
end if
if Blademessage < "Your persistence is an example to us all."
message "Blade message; 1250-1499"
end if
if Blademessage < "Your skill astounds me."
message "Blade message; 1500-1749"
end if
if Blademessage < "You have progressed further than most."
message "Blade message; 1750-1999"
end if
if Blademessage < "You are nearly peerless."
message "Blade message; 2000-2249"
end if
if Blademessage < "You are a model of dedication."
message "Blade message; 2250-2499"
end if
goto top
}
